<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Product Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        function myFunction() {
            document.getElementById("Product_Price").defaultValue = "";
            document.getElementById("Product_Quantity").defaultValue = "";
        }
    </script>
</head>
<body onload="myFunction">
    @*Navbar Begin*@
    <div class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">        
        @*Title*@
        @Html.ActionLink("Product Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        @*Toggle Button*@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*Nav Items Begin*@
        <div class="collapse navbar-collapse " id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                @*Nav Item Home*@
                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>                
                @*Nav Item Logout*@
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Logout" ? "active" : "")">@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
        @*Nav Items End*@
    </div>
    @*Navbar End*@
    @*Main Container Begin*@
    <div class="container-fluid body-content">
        @*First Row Begin*@
        <div class="row my-4 mx-2">
            @*First Coloumn And Sidenav Begin*@
            <div class="col-lg-2 list-group">
                @*Sidenav Item Add Product*@
                <a href="/AddProduct" class="@(ViewContext.RouteData.Values["controller"].ToString() == "AddProduct" ? "active" : "") list-group-item list-group-item-action  m-1 rounded shadow-sm border-0">&#10010; Add Product</a>                
                @*Sidenav Item List Product*@
                <a href="/ListProduct" class="@(ViewContext.RouteData.Values["controller"].ToString() == "ListProduct" ? "active" : "") list-group-item list-group-item-action m-1 rounded shadow-sm border-0">&#9636; List Product</a>                    
            </div>
            @*First Coloumn And Sidenav End*@
            @*Second Coloumn Begin*@
            <div class="col-lg-9">

                @RenderBody()

            </div>
            @*Second Coloumn End*@
        </div>
        @*First Row End*@
    </div>
    @*Main Container End*@
    @*Seprator*@
    <hr class="mx-3"/>
    @*Footer*@
    <footer class="mx-5">
        <p>&copy; @DateTime.Now.Year - Product Manager</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
